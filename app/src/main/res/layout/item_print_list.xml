<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:id="@+id/tv_nama_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Nama"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_jadwal_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_nama_print"
        android:textSize="12dp"
        android:layout_marginLeft="65dp"/>

    <TextView
        android:id="@+id/tv_jam_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_jadwal_print"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_obat_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_jam_print"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_keterangan_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_obat_print"
        android:textSize="12dp"
        android:layout_marginLeft="40dp"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/v_separator_schedule"
        app:layout_constraintTop_toBottomOf="@id/cl_print"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"

        android:background="@color/colorRed" />


</android.support.constraint.ConstraintLayout>