<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardUseCompatPadding="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card2"
        android:layout_below="@id/tv_today_title"
        android:orientation="horizontal"
        android:background="@drawable/bg_pill"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            card_view:layout_constraintBaseline_toBaselineOf="parent"
            card_view:layout_constraintLeft_toRightOf="parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/folder"
                android:layout_marginLeft="10dp"
                android:id="@+id/img_pill"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                android:id="@+id/txt_nama_jadwal_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintLeft_toRightOf="@id/img_pill"/>
            <TextView
                android:id="@+id/txt_jadwal_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-10-2019"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                card_view:layout_constraintTop_toBottomOf="@id/txt_nama_jadwal_history"
                card_view:layout_constraintLeft_toRightOf="@id/img_pill"
                />

            <TextView
                android:id="@+id/txt_jam_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                card_view:layout_constraintBaseline_toBaselineOf="@id/txt_jadwal_history"
                card_view:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/txt_obat_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abacavir"
                android:textColor="#fff"
                android:textSize="18dp"
                card_view:layout_constraintTop_toBottomOf="@id/txt_jam_history"
                card_view:layout_constraintLeft_toLeftOf="@id/txt_jadwal_history"
                />

            <TextView
                android:id="@+id/txt_keterangan_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textColor="#fff"
                android:textSize="18dp"
                card_view:layout_constraintTop_toBottomOf="@id/txt_obat_history"
                card_view:layout_constraintLeft_toLeftOf="@id/txt_jadwal_history"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>