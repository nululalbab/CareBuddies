<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#E8E9E8"
    tools:context=".ui.activity.DataInformationActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:src="@drawable/login_kiri_atas"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="fitXY"

            android:adjustViewBounds="true"/>

        <ImageView
            android:src="@drawable/login_kanan_atas"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"/>
        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_marginRight="70dp"
            android:background="@drawable/sp_rectangle_root"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:shadowColor="@color/colorGrey"
            android:shadowDx="3"
            android:shadowDy="4"
            android:shadowRadius="10"
            android:layout_height="wrap_content">
            <Spinner
                android:paddingLeft="20dp"
                android:id="@+id/role_spinner"
                android:hint="Pick Role"
                android:backgroundTint="#FFF"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View

                android:id="@+id/v_separator4"
                android:background="#E8E9E8"
                android:layout_below="@id/role_spinner"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <Spinner
                android:paddingLeft="20dp"
                android:id="@+id/gender_spinner"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:hint="Pick Role"
                android:backgroundTint="#FFF"
                android:layout_below="@id/v_separator4"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View

                android:id="@+id/v_role"
                android:background="#E8E9E8"
                android:layout_below="@id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <EditText
                android:paddingLeft="20dp"
                android:layout_below="@+id/v_role"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawablePadding="20dp"
                android:id="@+id/nama"
                android:hint="Full Name"
                android:backgroundTint="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View

                android:id="@+id/v_separator"
                android:background="#E8E9E8"
                android:layout_below="@id/nama"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <EditText
                android:id="@+id/alamat"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="20dp"
                android:backgroundTint="#FFF"
                android:layout_below="@id/v_separator"
                android:hint="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View

                android:id="@+id/v_separator2"
                android:background="#E8E9E8"
                android:layout_below="@id/alamat"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <EditText
                android:id="@+id/no_telp"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="20dp"
                android:backgroundTint="#FFF"
                android:layout_below="@id/v_separator2"
                android:hint="Number Phone"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View

                android:id="@+id/v_separator3"
                android:background="#E8E9E8"
                android:layout_below="@id/no_telp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <EditText
                android:id="@+id/ttl"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="20dp"
                android:backgroundTint="#FFF"
                android:layout_below="@id/v_separator3"
                android:hint="Birth place and date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View

                android:id="@+id/v_separator5"
                android:background="#E8E9E8"
                android:layout_below="@id/ttl"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <EditText
                android:id="@+id/sumber_biaya"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_payment_black_24dp"
                android:drawablePadding="20dp"
                android:backgroundTint="#FFF"
                android:layout_below="@id/v_separator5"
                android:hint="Resources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_submit"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_biodata"
            android:layout_above="@id/rl_input"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Biodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>